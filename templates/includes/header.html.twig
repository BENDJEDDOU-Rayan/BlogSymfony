<div class="relative flex items-center p-2 bg-[#4B6587] text-white">
    <a href="{{ path('home') }}" class="absolute left-1/2 transform -translate-x-1/2 text-center font-bold">
        {{ header_title }}
    </a>
    {% if app.user %}
    <a href="{{ path('app_login') }}" class="ml-auto px-3 py-2 text-[#333] font-bold bg-white rounded-md cursor-pointer">
        {{ app.user.username }}
    </a>
    {% else %}
    <a href="{{ path('app_login') }}" class="ml-auto px-3 py-2 text-[#333] font-bold bg-white rounded-md cursor-pointer">
        Connexion
    </a>
    {% endif %}

</div>